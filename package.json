{
  "name": "express-typescript-api-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express api with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/sahat/hackathon-starter.git"
  },
  "author": "Kyle Jackson",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run lint",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "test": "jest --forceExit",
    "build-ts": "tsc --pretty",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "async": "2.4.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "1.17.2",
    "compression": "1.6.2",
    "connect-mongo": "1.3.2",
    "cookie-session": "2.0.0-beta.2",
    "dotenv": "4.0.0",
    "errorhandler": "1.5.0",
    "express": "4.15.3",
    "express-node-metrics": "1.4.0",
    "express-session": "1.15.3",
    "express-validator": "3.2.0",
    "lodash": "4.17.4",
    "lusca": "1.4.1",
    "mongoose": "4.10.2",
    "morgan": "1.8.2",
    "passport": "0.3.2",
    "passport-facebook": "2.1.1",
    "passport-local": "1.0.0",
    "passport-openidconnect": "0.0.1",
    "passport-restify": "1.0.1",
    "request": "2.81.0",
    "restify": "4.3.0",
    "restify-cookies": "0.2.2"
  },
  "devDependencies": {
    "@types/async": "2.0.40",
    "@types/body-parser": "1.16.3",
    "@types/connect-mongo": "0.0.32",
    "@types/cookie-session": "2.0.32",
    "@types/dotenv": "4.0.0",
    "@types/errorhandler": "0.0.30",
    "@types/express": "4.0.35",
    "@types/express-session": "0.0.32",
    "@types/jest": "19.2.3",
    "@types/jquery": "2.0.45",
    "@types/lodash": "4.14.64",
    "@types/mongodb": "2.2.2",
    "@types/mongoose": "4.7.13",
    "@types/morgan": "1.7.32",
    "@types/node": "6.0.73",
    "@types/passport": "0.3.3",
    "@types/passport-facebook": "2.1.4",
    "@types/request": "0.0.43",
    "@types/restify": "4.3.3",
    "@types/supertest": "2.0.0",
    "concurrently": "3.4.0",
    "jest": "20.0.3",
    "nodemon": "1.11.0",
    "shelljs": "0.7.7",
    "supertest": "3.0.0",
    "ts-jest": "20.0.4",
    "tslint": "5.3.2",
    "typescript": "2.3.3"
  }
}
